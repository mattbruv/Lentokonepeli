{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2019",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"]
}
